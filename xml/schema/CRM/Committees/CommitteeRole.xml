<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
	<title>Committee Role</title>
	<titlePlural>Committee Roles</titlePlural>
	<base>CRM/Committees</base>
	<class>CommitteeRole</class>
	<name>civicrm_committee_role</name>
	<labelField>name</labelField>
	<comment>Used to identify the role in which an appointment is defined for a contact.</comment>
	<log>true</log>
	<paths>
		<add>civicrm/committee/role/manage</add>
		<edit>civicrm/committee/role/manage#?CommitteeRole=[id]</edit>
		<delete>civicrm/committee/role/manage?reset=1&amp;action=delete&amp;id=[id]</delete>
	</paths>

	<field>
		<name>id</name>
		<type>int unsigned</type>
		<required>true</required>
		<comment>Unique CommitteeRole ID</comment>
		<html>
		<type>Number</type>
		</html>
	</field>
	<primaryKey>
		<name>id</name>
		<autoincrement>true</autoincrement>
	</primaryKey>
	<field>
		<name>name</name>
		<type>varchar</type>
		<required>true</required>
		<import>true</import>
		<title>Role Name</title>
		<length>255</length>
		<localizable>true</localizable>
		<comment>Committee Role (e.g. Chair)</comment>
		<html>
			<label>Title</label>
			<type>Text</type>
		</html>
	</field>
	<field>
		<name>is_active</name>
		<title>Role Is Active</title>
		<type>boolean</type>
		<default>0</default>
		<comment>Is this committee role enabled?</comment>
		<html>
			<type>CheckBox</type>
		</html>
	</field>

</table>
